pipeline {
    agent {
        label 'docker' 
    }
    stages {
        stage('build') {
            agent {
                docker {
                    label 'docker'
                    image 'kivy/buildozer:latest'
                    args '-v ${env.WORKSPACE}/${env.BUILD_ID}:/home/user/hostcwd'
                }
            }
            steps {
                steps {
                    sh 'buildozer --version'
                }
            }
        }
    }
}